#!/bin/bash

help () {
    echo "Usage: $0 <build|regenerate|prune|reset>"
    echo -e "\tbuild <images|progs>\t(Re)builds all binaries and docker iamges."
    echo -e "\tregenerate\t\tRebuilds each challenge's Dockerfile, Makefile and .gitignore."
    echo -e "\tclean\t\t\tRemoves all binaries, made images & dangling images."
    echo -e "\treset\t\t\tExecutes clean, regenerate and build, in that order."
}

case "$1" in
    build)
        shift 1
        ./.scripts/build.sh "$@"
        ;;
    regenerate)
        shift 1
        ./.scripts/regenerate.sh "$@"
        ;;
    clean)
        shift 1
        ./.scripts/clean.sh "$@"
        ;;
    reset)
        shift 1
        ./.scripts/clean.sh "$@"
        ./.scripts/regenerate.sh "$@"
        ./.scripts/build.sh "$@"
        ;;
    *)
        help
        ;;
esac
